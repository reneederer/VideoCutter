<Window x:Class="VideoCutter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Video Cutter" Height="460" Width="880">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top controls -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center">
            <TextBox x:Name="txtFile" Width="420" IsReadOnly="True"/>
            <Button x:Name="btnOpen" Width="80" Click="BtnOpen_Click">Open</Button>
            <Button x:Name="btnPlay" Width="80" Click="BtnPlay_Click">Play</Button>
            <Button x:Name="btnStop" Width="80" Click="BtnStop_Click">Stop</Button>
        </StackPanel>

        <!-- Video -->
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="0,8,0,8">
            <Grid>
                <MediaElement x:Name="media"
                              LoadedBehavior="Manual"
                              UnloadedBehavior="Manual"
                              Stretch="Uniform"
                              IsMuted="False"/>
            </Grid>
        </Border>

        <!-- Bottom controls -->
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Label Content="Start (hh:mm:ss.fff)" VerticalAlignment="Center"/>
                <TextBox x:Name="txtStart" Width="120" Text="00:00:00.000" TextChanged="TimeBox_Changed"/>
                <Button Width="25" Content="-" Click="BtnStartMinus_Click"/>
                <Button Width="25" Content="+" Click="BtnStartPlus_Click"/>

                <Label Content="End (hh:mm:ss.fff)" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="txtEnd" Width="120" Text="00:00:10.000" TextChanged="TimeBox_Changed"/>
                <Button Width="25" Content="-" Click="BtnEndMinus_Click"/>
                <Button Width="25" Content="+" Click="BtnEndPlus_Click"/>

                <Button x:Name="btnPlayRange" Width="120" Click="BtnPlayRange_Click" Margin="10,0,0,0">Play Range</Button>
                <Button x:Name="btnCut" Width="120" Click="BtnCut_Click">Save Cut</Button>
            </StackPanel>

            <ProgressBar x:Name="progress" Height="18" Minimum="0" Maximum="1" Value="0"
                         Margin="0,8,0,0" MouseLeftButtonDown="Progress_MouseLeftButtonDown"/>

            <TextBlock x:Name="lblTime" Margin="0,6,0,0" Text="00:00:00.000 / 00:00:00.000"/>
            <TextBlock x:Name="lblStatus" Margin="0,6,0,0"/>
        </StackPanel>
    </Grid>
</Window>
